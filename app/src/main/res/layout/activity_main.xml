        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/NextImage6"
        app:layout_constraintTop_toTopOf="@id/NextDay6"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/pressstart2pregular"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/startScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:elevation="2dp">
<TextView
    android:id="@+id/WelText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/WelText"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="300dp"
    android:fontFamily="@font/pressstart2pregular"
    android:padding="40dp"
    android:textSize="20dp"
    android:gravity="center"
    android:textColor="#39FF14"
    >
</TextView>

        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pressstart2pregular"
            android:text="@string/ButMes"
            app:layout_constraintTop_toBottomOf="@+id/WelText"
            app:layout_constraintStart_toStartOf="@+id/WelText"
            app:layout_constraintEnd_toEndOf="@+id/WelText"

            android:backgroundTint="#39FF14"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
