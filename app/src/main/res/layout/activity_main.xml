        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/NextImage3"
        app:layout_constraintTop_toTopOf="@id/NextDay3"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/pressstart2pregular"
        />

    <!-- Day 4 -->
    <TextView
        android:id="@+id/NextDay4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day#4"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/NextDay3"
        app:layout_constraintStart_toStartOf="@id/NextDay3"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/pressstart2pregular"
        />

    <ImageView
        android:id="@+id/NextImage4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toEndOf="@id/NextDay4"
        app:layout_constraintTop_toTopOf="@id/NextDay4"
        android:layout_marginTop="-16dp"
        android:layout_marginStart="32dp"/>

    <TextView
        android:id="@+id/NextTemp4"
        android:fontFamily="@font/pressstart2pregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX°"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/NextImage4"
        app:layout_constraintTop_toTopOf="@id/NextDay4"
        android:layout_marginStart="32dp"/>

    <!-- Day 5 -->
    <TextView
        android:id="@+id/NextDay5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day#5"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/NextDay4"
        app:layout_constraintStart_toStartOf="@id/NextDay4"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/pressstart2pregular"
        />

    <ImageView
        android:id="@+id/NextImage5"
        android:layout_width="60dp"
