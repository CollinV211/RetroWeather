<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="edu.cofc.android.Retro_Weather.MainActivity"
    android:layout_marginTop="64dp"

    >

    <TextView
        android:id="@+id/TodayTextInfo"
        android:fontFamily="@font/pressstart2pregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day of week and date"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/TodayTemp"
        android:fontFamily="@font/pressstart2pregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX°"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/TodayTextInfo"
        app:layout_constraintStart_toStartOf="@id/TodayTextInfo"
        app:layout_constraintEnd_toEndOf="@id/TodayTextInfo"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/TodayImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cloud"
        app:layout_constraintTop_toBottomOf="@id/TodayTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />
    <ImageView
        android:id="@+id/TodayAnimation"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/sun"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/TodayTemp"
         app:layout_constraintTop_toBottomOf="@+id/TodayTemp" />

    <!-- Next Days -->
    <!-- Day 1 -->
    <TextView
        android:id="@+id/NextDay1"
        android:fontFamily="@font/pressstart2pregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day#1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/TodayImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/NextTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pressstart2pregular"
        android:text="XX°"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/NextImage1"
        app:layout_constraintTop_toTopOf="@id/NextDay1"
        android:layout_marginStart="32dp"
        />

    <ImageView
        android:id="@+id/NextImage1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toEndOf="@id/NextDay1"
        app:layout_constraintTop_toTopOf="@id/NextDay1"
        android:layout_marginTop="-16dp"
        android:layout_marginStart="32dp"
        />



    <!-- Day 2 -->
    <TextView
        android:id="@+id/NextDay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day#2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/NextDay1"
        app:layout_constraintStart_toStartOf="@id/NextDay1"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/pressstart2pregular"
        />

    <ImageView
        android:id="@+id/NextImage2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toEndOf="@id/NextDay2"
